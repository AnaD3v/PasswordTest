{
  "name": "passwordtesting",
  "version": "1.0.1",
  "description": "Aplicativo de teste de senhas para automação de logins",
  "author": "Ana Flávia",
  "type": "module",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --mac",
    "publish": "electron-builder --win --publish always"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "debug": "^4.4.0",
    "electron-log": "^5.3.1",
    "electron-updater": "^6.3.9",
    "express": "^4.21.2",
    "minimatch": "^10.0.1",
    "puppeteer": "^24.3.1"
  },
  "devDependencies": {
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.seuapp.passwordtesting",
    "productName": "PasswordTesting",
    "asar": false,
    "asarUnpack": "**/*.{exe,dll,bin,so,dmg}",
    "publish": null,
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "shortcutName": "PasswordTesting",
      "createDesktopShortcut": true
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./public/icons/app-icon.ico",
      "signtoolOptions": {
        "signingHashAlgorithms": []
      }
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "path/to/your/icon.icns",
      "category": "public.app-category.utilities",
      "extraResources": [
        "path/to/your/resources"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "icon": "./public/icons/app-icon.png"
    },
    "directories": {
      "output": "dist"
    }
  }
}
